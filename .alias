alias rtk_svn_update 'cd $REALTEK/SVN/risc_doc/         ; echo Updating risc_doc...         ; svn up * ; echo ------- ;\
                      cd $REALTEK/SVN/rlx_doc/          ; echo Updating rlx_doc...          ; svn up * ; echo ------- ;\
                      cd $REALTEK/SVN/platform/trunk/   ; echo Updating platform/trunk...   ; svn up * ; echo ------- ;\
                      cd $REALTEK/SVN/taroko/trunk/     ; echo Updating taroko/trunk...     ; svn up * ; echo ------- ;\
                      cd $REALTEK/SVN/taroko/trunk/doc/ ; echo Updating taroko/trunk/doc... ; svn up * ; echo ------- ;\
                      cd $REALTEK/SVN/                  ; echo Update finished ; echo Thank you! ;'
alias rtk_repo_sync 'cd $REALTEK/report/ ; repo sync ; echo Sync finished ; echo Thank you!'
