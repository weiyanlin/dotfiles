
# Start message
startup_message off

# Set caption always on
caption always " %{=u .G} %-w%<%{=ub .y}%n %t%{=u .G}%+w "

# Set hardstatus always on
hardstatus alwayslastline " %-Lw%{= bw}%n%f %t%{-}%+Lw %=@%H %Y-%m-%d %0c:%s "

# Set default encoding using utf8
defutf8 on

# Refresh the display when exiting programs
altscreen on

# Disable vbell
vbell off
